
<p id="notice"><%= notice %></p>
<div class="container-fluid">
  <div class="row">
    <div class="ask-title">
      <h2>La demandes de <%= @membre.fisrt_name %></h2>
    </div>
  </div>

  <div class="ask-card z-depth-3">
    <!-- picture -->
    <%= image_tag 'livres.jpg', class: "ask-picture"%>

    <!-- OBJET  -->
    <div class="ask-object">
      <h5><%= @ask_for_dollar.object.capitalize %></h5>
    </div>
    <!-- CREDIT -->
    <div class="ask-credit">
     <h5><%= @ask_for_dollar.credit %>€</h5>
    </div>

  </div>
  <!-- DESCRIPTION -->
  <div class="row ask-description">
    <div class="ask-description1 col s2">
      <h6>Description:</h6>
    </div>
    <div class="ask-description2 col s12">
      <h6 style="color: black; text-align: left;">
        <%= @ask_for_dollar.description %>
      </h6>
    </div>
  </div>
</div>

<% if @ask_for_dollar.accepted? %>
  Votre Demande à été accetpée
  <% else %>

  <%= simple_form_for @ask_for_dollar, url: edit_kid_ask_for_dollar_path(@membre) do |f| %>

      <div id="accepted" class="row">

        <input type="hidden" name="ask_for_dollar[accepted]" value="">

        <div class="offset-s1 z-depth-2 ask-answer col s4">
          <span class="radio">
            <label for="ask_for_dollar_accepted_true">
              <input class="radio_buttons optional" type="radio" value="true" name="ask_for_dollar[accepted]" id="ask_for_dollar_accepted_true">
              <i class="material-icons">check</i>
              <p>J'accepte</p>
            </label>
          </span>
        </div>
        <div class="col s1"></div>

        <div class="z-depth-2 ask-answer col s4">
          <span class="radio">
            <label for="ask_for_dollar_accepted_false">
              <input class="radio_buttons optional" readonly="readonly" type="radio" value="false" name="ask_for_dollar[accepted]" id="ask_for_dollar_accepted_false">
              <p>Je refuse</p>
              <i class="material-icons">clear</i>
            </label>
          </span>
        </div>
        <div class="right" style="margin-top: 50px; margin-right: 40px;" id="show-3" >
          <button class="btn waves-effect waves-light" type="submit" name="commit">Envoyer
            <i class="material-icons right" data-disable-with="Create Ask for money">send</i>
          </button>
        </div>
      </div>
  <% end %>
<% end %>
<%= render 'shared/navbar-kids' %>
