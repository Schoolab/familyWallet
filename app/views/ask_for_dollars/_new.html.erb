<div class="container-ask">
  <div class="background-circle">

  </div>
  <div class="ask-container">
    <div class="row">

      <p class="left" style="font-size: 30px" >AskMoney</p>
    </div>

    <%= simple_form_for @ask_for_dollar, url: kid_ask_for_dollars_path(@membre) do |f| %>
      <div id="show-1">
        <!-- Crédit -->
        <div class="input-field form-group string optional ask_for_dollar_credit">
          <label class="control-label string optional" for="ask_for_money_credit">De combien as-tu besoin?</label>
          <input class="form-control string optional" type="text" name="ask_for_dollar[credit]" id="ask_for_dollar_credit">
        </div>
        <!-- Objet -->
        <div class="input-field form-group string optional ask_for_dollar_object">
          <label class="control-label string optional" for="ask_for_dollar_object">Pour acheter quoi ? </label>
          <input class="form-control string optional" type="text" name="ask_for_dollar[object]" id="ask_for_dollar_object">
        </div>
      </div>
      <!-- add photo -->
      <div class="row">
        <div class="form-group file optional ask_for_money_photo">
          <label class=" left control-label file optional" for="ask_for_money_photo">
            <%= image_tag 'photo.png', height: 40 %></label>
          <p class="left">Envoyer une image (opt)</p>
          <input class="hidden file optional" type="file" name="ask_for_money[photo]" id="ask_for_money_photo">
        </div>
        </div>


      <!-- description -->
      <div id="show-2" class="form-group text optional ask_for_dollar_description ">
        <textarea class="form-control text optional" placeholder="Décrit ta demande" name="ask_for_dollar[description]" id="ask_for_dollar_description"></textarea>
      </div>


      <!-- inputs -->
      <div id="show-2" class="row ">
        <input type="submit" name="commit" value="ask" class="btn btn-large btn-floating right btn-floating green accent-3" data-disable-with="Create Ask for money">
      </div>

    <% end %>
  </div>
</div>
