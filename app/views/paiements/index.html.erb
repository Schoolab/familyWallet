<div class="container-congrat">
  <div class="header-congrat">
    <div class="congrat-pics">
      <%= image_tag 'ado.png', class: 'congrat-pics' %>
    </div>
    <div class="text-congrat">
      <h1>Bravo ! <br> Le compte de <%= Membre.last.fisrt_name %> à été crée !</h1>
    </div>
  </div>

  <div class="congrat-phone">

    <div class="form-group string optional membre_fisrt_name">
      <label class="control-label string optional" for="membre_fisrt_name">Rentrez son numéro de téléphone <br> pour qu'il puisse se connecter à l'application</label>
      <input class="form-control string optional" placeholder="+33 6 xx xx xx xx" type="text" name="membre[fisrt_name]" id="membre_fisrt_name">
    </div>

  <div class="row">
    <div class="btn-container">
      <div class="btn-form">
      <%= link_to 'ENVOYER', page_membres_path(current_user), class: 'envoie'%>
      </div>
    </div>
  </div>
  </div>


</div>
