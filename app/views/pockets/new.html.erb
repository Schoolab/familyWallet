            <input class="hidden" type="checkbox" name="prive">
            <div class="tresor_prive">
              <label class="gnd_custom">Type</label>

              <div id="tresor_prive">
                <span class="radio">
                  <label for="tresor_prive_false">
                    <input class="radio_buttons optional" readonly="readonly" type="radio" value="false" name="tresor[prive]" id="tresor_prive_false">
