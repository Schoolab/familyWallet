                    <input class="radio_buttons optional" type="radio" value="true" name="tresor[prive]" id="tresor_prive_true"><%= image_tag "bloque.png", height: 55, width: 130, crop: :fill %>
                  </label>
                </span>
              </div>
            </div>
          </div>
    <div class="form-inputs-new">
      <div class="input-div">
        <%= f.submit "JE VALIDER", class: 'btn-form', id: "validate" %>
      </div>
    </div>
  <% end %>
</div>
