 <!-- button -->
    <div class="container-compte">
      <h3>Créez le compte de votre enfant</h3>
      <div class="row">
        <div class="col s10 ">
            <%= link_to new_page_membre_path(@user) do %>
              <div class="z-depth-1 compte-btn">
                <p>Créer</p>
              </div>
            <% end %>
        </div>
      </div>

      <div class="row">
        <div class="col s10 ">
          <div class="compte-btn z-depth-1" id="identifiants">
            <p>Accès via Contact</p>
          </div>
        </div>
      </div>

        <div class="container" id="toshow">
          <form class="col s12">
            <div class="row">
              <div class="input-field col s6">
                <input id="icon_prefix" type="text" class="form-plus validate">
                <label for="icon_prefix">Identifiant</label>
              </div>
              <div class="input-field col s6">
                <input id="icon_telephone" type="tel" class="form-plus validate">
                <label for="icon_telephone">Mot de Passe</label>
              </div>

              <%= link_to page_path(@user) do %>
                <div style="margin-left: 45%" class="waves-effect waves-light btn light-blue darken-4">VALIDER
                </div>
              <% end %>
            </div>
          </form>
        </div>
    </div>



    <%= link_to do %>
      <% 'javascript:history.back()' %>
      <i class="material-icons" id="blackarrow">arrow_backward</i>
    <% end %>
