<div class="container-ask">
  <div class="background-circle"></div>
  <div class="ask-container">
    <div class="row">

      <p class="right" style="font-size: 30px" >AskMoney</p>
    </div>

    <%= simple_form_for @askformonney, url: new_kid_ask_for_money_path(@membre) do |f| %>
      <div id="show-1">
        <!-- Crédit -->
        <div class="input-field form-group string optional ask_for_money_credit">
          <label class="control-label string optional" for="ask_for_money_credit">De combien as-tu besoin?</label>
          <input class="form-control string optional" type="text" name="ask_for_money[credit]" id="ask_for_money_credit">
        </div>
        <!-- Objet -->
        <div class="input-field form-group string optional ask_for_money_object">
          <label class="control-label string optional" for="ask_for_money_object">Pour acheter quoi ? </label>
          <input class="form-control string optional" type="text" name="ask_for_money[object]" id="ask_for_money_object">
        </div>
        <!-- add photo -->
        <div class="row">
          <div class="form-group file optional ask_for_money_photo">
            <label class=" left control-label file optional" for="ask_for_money_photo"><%= image_tag 'photo.png', height: 40 %></label>
            <p class="left">Envoyer une image (opt)</p>
            <input class="hidden file optional" type="file" name="ask_for_money[photo]" id="ask_for_money_photo">
          </div>
          <%= f.input :photo_cache, as: :hidden %>
        </div>
      </div>

      <!-- description -->
      <div class="description hidden" id="show-2">
          <input placeholder="Décrire quelque chose"     type="text" name="ask_for_money[description]" id="ask_for_money_description">
      </div>
      <!-- inputs -->
      <div id="show-2" class="row hidden">
        <div >
          <input type="submit" name="commit" value="ask" class="btn btn-large btn-floating right btn-floating green accent-3" data-disable-with="Create Ask for money">
        </div>

        <div id="show-2" class="back left come-back">
          <i class="material-icons">arrow_left</i>Retour
        </div>
      </div>

        <a id="show-1" class=" btn-floating btn-large waves-effect waves-light right black">
          <i class="material-icons">chevron_right</i>
        </a>

    <% end %>
  </div>
</div>



















