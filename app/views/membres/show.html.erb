<div class="main-container-profilecreation">
  <div class="header-profilecreation">
    <div class="col s10">
      <div class="header-profilecreation-name">
       <h4><%= @membre.fisrt_name %></h4>
      </div>
    </div>
    <div class="header-profilecreation-photo col s2">
      <%= cl_image_tag("c1ebkvku00vcgo8fw7qv.png", height: 40, :gravity=>"face", :radius=>1000)%>
    </div>
  </div>

  <div class="content-profilecreation" id="content-show">
    <ul id="tabs-swipe-demo" class="tabs">
      <li class="tab col s3">
        <a href="#test-swipe-1">Ses Poches</a></li>
      <li class="tab col s3">
        <a class="active" href="#test-swipe-2">Ses Opérations</a>
      </li>
      <li class="tab col s3">
        <a href="#test-swipe-3">Sa carte</a>
      </li>
    </ul>

    <div id="test-swipe-1" class="vos-poches col s12">
      <div class="card-son-argent">
        <div class="card-son-argent-titre">
          <p style="color: black; font-weight: 600;">Son Argent de Poche</p>
        </div>
        <div class="card-son-argent-mois">
          <p>40€/mois</p>
        </div>
        <div class="card-son-argent-gain">
          <p>+155 €</p>
        </div>
        <div class="card-son-argent-arrow">
          <i class="material-icons">arrow_forward</i>
        </div>
      </div>
      <div class="vos-poches-versements">
        <h6>Vos poches versements</h6>
        <%= image_tag 'Virement_1.png', class: 'tapoche' %>
        <%= image_tag 'Virement_1_Argentdepoche.png', class: 'tapoche'  %>
        <%= image_tag 'Virement 2.png', class: 'tapoche'  %>
        <%= image_tag 'Virement_1.png', class: 'tapoche' %>

      </div>

      <div class="card-son-askmonay">
        <div class="card-son-askmonay-not">
          <p>AskMoney</p>
        </div>
        <div class="card-son-askmonay-titre">
          <p style="color: black; font-weight: 600;">Total des demandes</p>
        </div>
        <div class="card-son-askmonay-mois">
          <p>Dernière demande le 19/03/18</p>
        </div>
        <div class="card-son-askmonay-gain">
          <p>55€</p>
        </div>
        <div class="card-son-askmonay-arrow">
          <i class="material-icons">arrow_forward</i>
        </div>
      </div></div>

    <div id="test-swipe-2" class="opérations-container col s12">
