<div class="form_container-new">

  <div class="carde">
    <!-- teste git push -->
    <%= image_tag 'arrow.png', height: 20, class: 'card-arrow' %>

    <%= image_tag 'cross.png', height: 15, class: 'cross' %>

    <div class="annonce" id="new-membrer-header" >
      <h1>Identité <br> du compte virtuel
      </h1>

      <%= image_tag 'pagination.png', height: 10, class: 'pagination-pics' %>
    </div>

  </div>
    <div class="photo-container">
      <%= image_tag 'poche_blanche.png', height: 150 %>
    </div>


  <%= simple_form_for @membre, url: page_membres_path(@user) do |f| %>




    <div class="form-inputs-new">
        <!-- First Name -->
      <div class="input-div-new">
        <div class="form-group string optional membre_last_name">
          <div class="input-field col s12">
            <input name="membre[fisrt_name]" id="membre_fisrt_name" type="text" class="form-control validate">
            <label for="fisrt_name">Prénom</label>
          </div>
        </div>
      </div>

      <!-- Last Name  -->
      <div class="input-div-new">
        <div class="form-group string optional membre_last_name">
          <div class="input-field col s12">
            <input name="membre[last_name]" id="membre_last_name" type="text" class="form-control validate">
            <label for="last_name">Nom</label>
          </div>
        </div>
      </div>

      <!-- Birthday -->
      <div class="input-div-new">
        <div class="form-group string optional membre_birthday">
          <div class="input-field col s12">
            <input name="membre[birthday]" id="membre_birthday" type="text" class="form-control validate">
            <label for="membre_birthday">Date d'anniversaire         (JJ/MM/AAAA)</label>
          </div>
        </div>
      </div>

    </div>
    <!-- CheckBoxes -->
    <div class="form-group check_boxes optional membre_sexe">
      <input type="hidden" name="membre[sexe][]" value="">
      <div class="row" >
        <div class="col-xs-4" style="margin-right: 30px;">
          <span class="checkbox">
            <label for="membre_sexe_true">
              <input class="check_boxes hidden" type="checkbox" value="true" name="membre[sexe][]" id="membre_sexe_true">
              <div class="btn-checkboxe">
                <p>Garçon</p>
              </div>
            </label>
          </span>
        </div>
        <div class="col-xs-4">
          <span class="checkbox">
            <label for="membre_sexe_false">
              <input class="check_boxes optional hidden" readonly="readonly" type="checkbox" value="false" name="membre[sexe][]" id="membre_sexe_false">
              <div class="btn-checkboxe" >
                <p>Fille</p>
              </div>
            </label>
          </span>
        </div>
      </div>
    </div>

    <br>
    <div class="row">
      <input type="submit">
        <a class="btn-floating btn-large waves-effect waves-light black">
          <i class="material-icons">arrow_forward</i>
        </a>
      </input>
    </div>

    </div>
  </div>
<% end %>
</div>
</div>

